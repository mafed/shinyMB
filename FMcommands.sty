%% operators
\newcommand{\abs}[1]{\lvert #1 \rvert}
\newcommand{\deqTo}{\mathop{\mathrel{:}}\! =}
\newcommand{\condProb}[2]{%         conditional probability
    \mathrm{P} \left[ #1 \vert #2 \right]}
\newcommand{\cor}[1]{%                  correlation operator
    \text{Cor}\left\{ #1 \right\}}
\newcommand{\hatCor}[1]{%             hat correlation operator
    \text{C}\widehat{\text{\rule{0em}{.75em}o}}\text{r} \! \left\{%
     #1 \right\}}
\newcommand{\corSq}[1]{%              squared correlation operator
    \text{Cor}^2 \! \left\{ #1 \right\}}
\newcommand{\hatCorSq}[1]{%             hat covariance operator
    {\text{C}\widehat{\text{\rule{0em}{.75em}o}}\text{r}}^2 \! \left\{%
     #1 \right\}}
\newcommand{\cov}[1]{%                 covariance operator
    \text{Cov}\left\{ #1 \right\}}
\newcommand{\hatCov}[1]{%             hat covariance operator
    \text{C}\widehat{\text{\rule{0em}{.75em}o}}\text{v} \! \left\{%
     #1 \right\}}
\newcommand{\covSq}[1]{%              squared covariance operator
    \text{Cov}^2 \! \left\{ #1 \right\}}
\newcommand{\hatCovSq}[1]{%             hat covariance operator
    {\text{C}\widehat{\text{\rule{0em}{.75em}o}}\text{v}}^2 \!\left\{%
     #1 \right\}} \newcommand{\var}[1]{%                  variance operator
    \text{Var}\left\{ #1 \right\}}
\newcommand{\hatVar}[1]{%              hat variance operator
     \text{V}\widehat{\text{\rule{0em}{.75em}a}}\text{r} \!\left\{%
     #1 \right\}}
\newcommand{\ind}{%                 independence symbol
    \mathop{\mathrel{\bot\hspace*{-1em}\bot}}}
\newcommand{\norm}[2]{{\lVert #1 \rVert}_{#2}}
\newcommand{\indicat}[1]{\mathbb I \left\{ #1 \right\}}
